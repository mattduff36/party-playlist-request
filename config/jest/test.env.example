# Test Environment Variables
# Copy this file to test.env and fill in your actual values

# Database URL (Test Database)
DATABASE_URL=postgresql://user:password@localhost:5432/party_playlist_test

# JWT Secret (for testing)
JWT_SECRET=test_jwt_secret_change_this_in_production

# Spotify API (use test/mock credentials)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Spotify Mock (for tests without real API)
MOCK_SPOTIFY_API=true

# Sendgrid (for email testing)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# Pusher (Real-time updates - use your test Pusher app)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_pusher_cluster

# Redis Configuration (for testing)
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# Vercel KV (if using Vercel)
KV_URL=your_kv_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token

# Test Environment
NODE_ENV=test
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ⚠️ SECURITY NOTE:
# Never commit this file with real credentials!
# Always use test/mock values for CI/CD

